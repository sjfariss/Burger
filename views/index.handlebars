<div class="container wrapper">
    <div class="jumbotron text-center text-white">
      <h1 class="display-2"><strong> The Burger Hub</strong></h1>
      <p class="lead mt-4"><i class="fas fa-star" aria-hidden="true"></i> Eat Da Burger! Best Burgers In Town!</p>  
    </div>
    <br>
  <div class="row mt-4">
    <div class="col-6">
      <div class="card">
        <div class="card-header text-center">
          Hungry? It's Time To Eat!</div>
        <div class="card-body">
          <p class="card-text">
            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                <li>
                <div class="row">
                  <div class="col">
                   {{id}}. {{ burger_name }}
                  </div>
                  <div class="col">
                   <button class="btn dev-btn" data-id={{id}} data-status={{devoured}}>Devour It!</button>
                   </div> 
                </div>   
                </li>
                {{/unless}}
              {{/each}}
            </ul>
          </p>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="card-header text-center">
          Burgers Already Devoured!
        </div>
        <div class="card-body">
          <p class="card-text">
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                <li>
                {{id}}. {{ burger_name }} 
                </li>
                {{/if}}
              {{/each}}
            </ul>
          </p>
        </div>    
     </div>
     </div>
  </div>
  <br>
  <br>
  <br>
     <div class="row text-center">
      <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          Add a Burger!
        </div>
        <div class="card-body">
          <form class="add-form">
            <div class="form-group">
            <label for="burgerName">Burger Name:</label>
            <input type="text" id="name" name="burgerName">
            </div>
            <button type="submit" class="btn">Add a Burger:</button>
          </form>
        </div>
      </div>      
    </div>
  </div> 
</div>
<footer class="footer text-left">
    <div class="container align-left">
      <p>Eat-Da-Burger-Sharon J. Fariss</p>
    </div>  
</footer>
